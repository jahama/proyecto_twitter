<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
    android:key="PREF_AUTO_UPDATE"
    android:title="Refresco automatico"
    android:summary="Selecion de la actualizacion automatica"
    android:defaultValue="true"
  />
  <ListPreference
   android:key="PREF_UPDATE_FREQ"
   android:title="Frecuencia de Actualizacion"
   android:summary="Seleccionar la frecuencia de la actualizacion automatica "
   android:entries="@array/update_freq_options"
   android:entryValues="@array/update_freq_values"
   android:dialogTitle="Frecuencia Actualizacion"
   android:defaultValue="60"
  />
  <ListPreference
    android:key="PREF_IDIOMA"
    android:title="Idioma"
    android:summary="Seleccione el idioma de la aplicacion"
    android:entries="@array/pref_idioma_opcion"
    android:entryValues="@array/pref_idioma_valor"
    android:dialogTitle="Idioma"
    android:defaultValue="1"
  />
</PreferenceScreen>
